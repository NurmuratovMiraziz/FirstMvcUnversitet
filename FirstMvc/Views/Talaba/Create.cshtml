@model FirstMvc.Models.Talaba

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

@using (Html.BeginForm("AddTalaba", "Talaba", FormMethod.Post))
{
<h4>Talaba</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ismi" class="control-label"></label>
                <input asp-for="Ismi" class="form-control" />
                <span asp-validation-for="Ismi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Yoshi" class="control-label"></label>
                <input asp-for="Yoshi" class="form-control" />
                <span asp-validation-for="Yoshi" class="text-danger"></span>
            </div>
